
{% extends '::fronted.html.twig' %}

{% block body %}
    <nav class="navbar navbar-custom">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
    </div>
    </nav>

    <div class="container" style="margin-top: 72px;">

        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            {% if error %}
                <div class="alert alert-danger">{{ error.message | trans }}</div>
            {% endif %}
            <div class="panel panel-default">
               <div class="panel-heading">
                 <div class="panel-title"><label style="color: #ffffff !important">Autenticación de Usuario</label></div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px">
                  </div>
               </div>

                <div class="panel-body" style="padding-top: 30px;border-color:#8988bb !important; ">
                    <form  action="{{ path('login_check') }}" method="post" id="loginform" class="form-horizontal" role="form">
                        <div class="input-group" style="margin-bottom: 25px">
                        <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                            </span>
                            <input id="login-username" name="_username" value="{{ last_username }}" class="form-control" type="text" placeholder="nombre de usuario" value="" name="username">
                        </div>

                        <div class="input-group" style="margin-bottom: 25px">
                            <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            <input id="login-password" name="_password" class="form-control" type="password" placeholder="contraseña" name="password">
                        </div>

                        <div class="form-group" style="margin-top:10px">
                            <div class="col-sm-12 controls">
                                <!--<input type="checkbox" id="remember_me" name="_remember_me"/>
                                <label for="remember_me">No cerrar sesión</label><br>-->
                               <button type="submit" id="btn-fblogin" class="btn btn-default" href="#" style="background-color: #ccc !important">Iniciar</button>
                            </div>
                        </div>
                    </form>

                </div>


            </div>

        </div>
    </div>

