{% extends '::fronted.html.twig' %}
{% block title %}Visualizar servidor ldap{% endblock %}
{% block encabezado %}Visualizar servidor ldap{% endblock %}
{% block contenedor %}
    <div class="bs-example" data-example-id="simple-alerts">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success" role="alert">
                {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
    <div class="list-group">

        <a href="#" class="list-group">
            <a href="{{ path('editarldap',{'id':ldap.id}) }}" class="button cancelar btn btn-link"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
        </a>
        <a href="#" class="list-group">
            <a href="{{ path('listadousuarios') }}" class="button cancelar btn btn-link"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Activos</a>
        </a>

    </div>

        <div class="col-xs-6 col-sm-4">
            <strong>Dominio<br></strong>
            {{ ldap.dominio }}
            <br><br>
            <strong>Usuario<br></strong>
            {{ ldap.user }}

        </div>
        <div class="col-xs-6 col-sm-4">
            <strong>Servidor ldap<br></strong>
            {{ ldap.nombre }}
            <br><br>
            <strong>Base_DN</strong><br>
            {{ ldap.basedn }}

        </div>
        <div class="col-xs-6 col-sm-4">
            <strong>Puerto</strong><br>
            {{ ldap.puerto }}
        </div>
    </div>


{% endblock %}
