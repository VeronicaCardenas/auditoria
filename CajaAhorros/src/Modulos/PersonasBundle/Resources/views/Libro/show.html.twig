{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Libro</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Numerorecibo</th>
                <td>{{ entity.numeroRecibo }}</td>
            </tr>
            <tr>
                <th>Debe</th>
                <td>{{ entity.debe }}</td>
            </tr>
            <tr>
                <th>Haber</th>
                <td>{{ entity.haber }}</td>
            </tr>
            <tr>
                <th>Saldo</th>
                <td>{{ entity.saldo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('libro') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('libro_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
